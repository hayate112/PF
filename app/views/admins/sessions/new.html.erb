<div class="login-box--admin">
  <div class="login-box__inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>管理者用ログイン</h2>
    <div class="login-box__email">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="login-box__password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :password, "パスワード" %>
        </div>
        <div class="column-right">
          <%= link_to "パスワードを忘れた場合", new_user_password_path %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <div class="login-box__login">
      <%= f.submit "ログイン" %>
      <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember, "ログインしたままにする" %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
