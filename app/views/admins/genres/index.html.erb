<div class="genre-box">
  <div class="genre-box-new">
    <div class="genre-box-new__inner">
      <%= form_with(model:[:admins, @genre], local:true) do |f| %>
      <h2>ジャンル追加</h2>
      <div class="genre-box-new__status">
        <%= f.label :genre_status, '対象' %>
        <div class="genre-box-new__radio-button">
          <div class="genre-box-new__radio-button1">
            <%= f.radio_button :genre_status, true %>
            <%= f.label :genre_status, 'ブログ', value:true %>
          </div>
          <div class="genre-box-new__radio-button2">
            <%= f.radio_button :genre_status, false %>
            <%= f.label :genre_status, '商品', value:false%>
          </div>
        </div>
      </div>
      <div class="genre-box-new__name">
        <%= f.label :name, 'ジャンル名' %>
        <%= f.text_field :name %>
      </div>
      <div class="genre-box-new__submit">
        <%= f.submit '新規追加' %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="genre-box-index">
    <div class="genre-box-index__inner">
      <h2>ジャンル一覧</h2>
    </div>
    <div class="genre-box-index__index">
      <div class="genre-box-index__index-blog">
        <table>
          <tr>
            <th>ブログ用ジャンル</th>
            <th></th>
          </tr>
          <% @genre_blog.each do |genre| %>
          <tr>
            <td class="genre-box-index__index-name"><%= genre.name %></td>
            <td class="genre-box-index__index-edit"><%= link_to '編集', edit_admins_genre_path(genre.id), class: 'EDITlink' %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="genre-box-index__index-item">
        <table>
          <tr>
            <th>商品用ジャンル</th>
            <th></th>
          </tr>
          <% @genre_item.each do |genre| %>
          <tr>
            <td class="genre-box-index__index-name"><%= genre.name %></td>
            <td class="genre-box-index__index-edit"><%= link_to '編集', edit_admins_genre_path(genre.id), class: 'EDITlink' %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
  


