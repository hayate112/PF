<h2>商品一覧</h2>

<%= link_to '投稿する', new_admins_item_path %>
<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td>
      <%= link_to admins_item_path(item.id) do %>
        <%= item.name %>
      <% end %>
    </td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
    <td>
      <% if item.sale_status == true %>
        在庫あり
      <% else %>
        在庫なし
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
