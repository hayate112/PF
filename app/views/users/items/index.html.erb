<h2>商品一覧</h2>

<%= link_to '閲覧履歴一覧', item_history_items_path %>

<% @genres.each do |genre| %>
  <tr>
    <td>
      <%= link_to genre.name, item_genre_search_items_path('search[value]': genre.id, 'search[how]': "match") %>
    </td>
  </tr>
<% end %>

<%= form_with model: @item, url: item_search_items_path, method: :get, local: true do |f| %>
  <%= f.select :keyword, [ ['新着順', 'new'], ['古い順', 'old'], ['価格が高い順', 'highprice'], ['価格が低い順', 'lowprice'] ] %>
  <%= f.submit '並べ替える' %>
<% end %>

<div>
<% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <div>
      <% item.item_images.first(1).each do |image| %>
        <%= attachment_image_tag image, :image, :fill, 120, 80, fallback: "no_image.jpg", size: "120x80" %>
      <% end %>
    </div>
   <div>
     <%= item.name %>
   </div>
   <div>
     <%= item.genre.name %>
   </div>
   <div>
     <%= item.price %>
   </div>
   <div>
     <% if item.sale_status == true %>
       在庫あり
     <% else %>
       在庫なし
     <% end %>
   </div>
  <% end %>
<% end %>
</div>
<%= paginate @items %>