<% if blog.blog_liked_by?(current_user) %>
  <p>
    <%= link_to blog_blog_likes_path(blog), method: :delete, remote: true do %>
      ♥<%= blog.blog_likes.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to blog_blog_likes_path(blog), method: :post, remote: true do %>
      ♡<%= blog.blog_likes.count %> いいね
    <% end %>
  </p>
<% end %>