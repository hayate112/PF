<!DOCTYPE html>
<html>
  <head>
    <title>Cookie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/d9980bda49.js" crossorigin="anonymous"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.raty.js"></script>
  </head>

  <body>
    <header>
      <div>
        <%= link_to 'Ålice', root_path %>
      </div>
      <div>
        <ul>
        <% if user_signed_in? %>
          <li><%= link_to 'マイページ', users_path %></li>
          <li><%= link_to 'ブログ一覧', blogs_path %></li>
          <li><%= link_to '商品一覧', items_path %></li>
          <li><%= link_to 'カート', cart_items_path %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path(logout: 0), method: :delete %></li>
        <% elsif admin_signed_in? %>
          <li><%= link_to 'ブログ一覧', admins_blogs_path %></li>
          <li><%= link_to '会員一覧', admins_users_path %></li>
          <li><%= link_to '注文履歴一覧', admins_orders_path %></li>
          <li><%= link_to '商品一覧', admins_items_path %></li>
          <li><%= link_to 'ジャンル一覧', admins_genres_path %></li>
          <li><%= link_to 'ログアウト', destroy_admin_session_path(logout: 1), method: :delete %></li>
        <% else %>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'ブログ一覧', blogs_path %></li>
          <li><%= link_to '商品一覧', items_path %></li>
          <li><%= link_to '新規登録', new_user_registration_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
          <li><%= link_to '管理者ログイン', new_admin_session_path %></li>
        <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
